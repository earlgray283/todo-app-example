type Query {
  todos: [Todo!]!
}

input NewTodo {
  title: String!
  description: String
  dueDate: Time!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}

type Todo {
  id: ID!
  title: String!
  description: String
  dueDate: Time!
  done: Boolean!
  createdAt: Time!
  updatedAt: Time
}

scalar Time